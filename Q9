/**
 *
 * @author Discente
 */

public class Valrin {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here

         int i,r,m;
        
        String si;
   
        
        si=JOptionPane.showInputDialog(null, "Idade: ");

        
      
        i = Integer.parseInt(si); 
     m=18;
  r= i-m;
  
      if(i>=18) {      
             
      JOptionPane.showMessageDialog(null, "Maior de idade!");}
      else {
        
JOptionPane.showMessageDialog(null, "Maior de idade!"+"\n"+"Falta ainda "+r+" anos!");}
      
                
        
    }
    
}
