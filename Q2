package exercicio_fix;

import javax.swing.JOptionPane;
/**
 *
 * @author Discente
 */
public class Valrin {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here

    
        
         double p,h,imc;
        
        String sp,sh;
   
        
        sp=JOptionPane.showInputDialog(null, "Peso: ");
        sh=JOptionPane.showInputDialog(null, "Altura: ");
       
        
        p = Double.parseDouble(sp);
        h = Double.parseDouble(sh);

        imc= p/(h*h);
     
         if(imc >=40 ) {
      JOptionPane.showMessageDialog(null, "Obeso m√≥rbido!");}
                  else if(imc < 40) {
      JOptionPane.showMessageDialog(null, "Obeso moderado!");}
                           else if(imc < 35) {
      JOptionPane.showMessageDialog(null, "Obeso leve!");}
         else if(imc < 30) {
      JOptionPane.showMessageDialog(null, "Sobrepeso!");} 
                                    else if(imc < 25) {
      JOptionPane.showMessageDialog(null, "Peso normal!");}
         else if(imc < 18.5) {
      JOptionPane.showMessageDialog(null, "Abaixo do peso!");} 
        
        
    }
    
}
